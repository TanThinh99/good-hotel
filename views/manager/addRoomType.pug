extends layout/base.pug

block title
    title Thêm loại phòng

block header
    link(rel='stylesheet' href='/assets_manager/css/mycss/loaiPhong.css')

block content
    // Header
    .header.bg-primary.pb-6
        .container-fluid
            .header-body
                .row.align-items-center.py-4
                    .col-lg-6.col-7
                        h6.h2.text-white.d-inline-block.mb-0 Loại phòng
                        nav.d-none.d-md-inline-block.ml-md-4(aria-label='breadcrumb')
                            ol.breadcrumb.breadcrumb-links.breadcrumb-dark
                                li.breadcrumb-item
                                    a(href='#')
                                        i.fas.fa-home
                                li.breadcrumb-item(aria-current='page') Loại phòng
                                li.breadcrumb-item.active(aria-current='page') Thêm mới
                    
    // Page content
    .container-fluid.mt--6
        .row.justify-content-center
            .col
                .card
                    .card-header.bg-transparent
                        h3.mb-0 Thông tin loại phòng
                        input(type="hidden", id="hotelID" value=hotelID)
                        input(type="hidden", id="token" value=token)
                        input(type="hidden", id="csrfToken" value=csrfToken)
                    .card-body
                        .row.icon-examples
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label(for='name') Tên loại phòng
                                    input#name.form-control(type='text' aria-describedby='emailHelp')
                                    span.infoError#nameInfoErr
                                        b.mr-1 !
                                        | Tên loại phòng không được rỗng
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label(for='price') Giá (VND)
                                    input#price.form-control(type='number' aria-describedby='emailHelp')
                                    span.infoError#priceInfoErr
                                        b.mr-1 !
                                        | Giá loại phòng không được rỗng và phải lớn hơn 0
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label(for='amountRoom') Số lượng phòng
                                    input#amountRoom.form-control(type='number' min='0' step='1' aria-describedby='emailHelp')
                                    span.infoError#amountRoomInfoErr
                                        b.mr-1 !
                                        | Số lượng phòng không được rỗng và phải lớn hơn 0
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label(for='image360') Liên kết hình ảnh 360
                                    input#image360.form-control(type='text' aria-describedby='emailHelp')
                            .col-md-11.col-md-6.mx-auto
                                button.btn.btn-success(onclick='AddRoomType()')
                                    i.fa.fa-pencil.mr-1(aria-hidden="true")
                                    | Tạo loại phòng
            
        // Footer
        include layout/footer.pug

block script 
    script(src="/assets_manager/js/myjs/addRoomType.js") 
    script.
        document.getElementById('roomTypeNav').classList.add('active');