head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='Start your development with a Dashboard for Bootstrap 4.')
    meta(name='author' content='Creative Tim')
    //- title Argon Dashboard - Free Dashboard for Bootstrap 4
    // Bootstrap 4.4
    link(rel='stylesheet' href='/assets_manager/css/bootstrap/bootstrap.min.css')
    // Favicon
    link(rel='icon' href='/assets_manager/img/brand/favicon.png' type='image/png')
    // Fonts
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700')
    // Icons
    link(rel='stylesheet' href='/assets_manager/vendor/nucleo/css/nucleo.css' type='text/css')
    link(rel='stylesheet' href='/assets_manager/vendor/@fortawesome/fontawesome-free/css/all.min.css' type='text/css')
    // Page plugins
    // Argon CSS
    link(rel='stylesheet' href='/assets_manager/css/argon.css?v=1.2.0' type='text/css')
    
    // My CSS Extends
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet' href='/assets_manager/css/mycss/layout.css')

    block title
    block header

// Sidenav
nav#sidenav-main.sidenav.navbar.navbar-vertical.fixed-left.navbar-expand-xs.navbar-light.bg-white
    .scrollbar-inner
        // Brand
        .sidenav-header.align-items-center
            img.brand-img(src='/assets_manager/img/brand/good_hotel.png' alt='...')
        .navbar-inner
            // Collapse
            #sidenav-collapse-main.collapse.navbar-collapse
                // Nav items
                ul.navbar-nav
                    li.nav-item
                        a.nav-link#infoNav(href='/manager')
                            i.ni.ni-building.text-primary
                            span.nav-link-text Thông tin
                    li.nav-item
                        a.nav-link#convenientNav(href='/manager/convenient')
                            i.ni.ni-satisfied.text-orange
                            span.nav-link-text Tiện nghi
                    li.nav-item
                        a.nav-link#roomTypeNav(href='/manager/roomType')
                            i.ni.ni-shop.text-info
                            span.nav-link-text Loại phòng
                    li.nav-item
                        a.nav-link#checkroomNav(href='/manager/checkRoom')
                            i.ni.ni-tag.text-yellow
                            span.nav-link-text Đặt phòng
                    li.nav-item
                        a.nav-link#commentNav(href='/manager/comment')
                            i.ni.ni-chat-round.text-green
                            span.nav-link-text Bình luận
                    li.nav-item
                        a.nav-link#billNav(href='/manager/bill')
                            i.ni.ni-folder-17.text-default
                            span.nav-link-text Hóa đơn
                // Divider
                hr.my-3

                // Navigation
                ul.navbar-nav.mb-md-3
                    li.nav-item
                        a.nav-link(href='/logout')
                            i.ni.ni-user-run
                            span.nav-link-text Đăng xuất

// Main content
#panel.main-content
    // Topnav
    nav.navbar.navbar-top.navbar-expand.navbar-dark.bg-primary.border-bottom
        .container-fluid
            #navbarSupportedContent.collapse.navbar-collapse
                // Navbar links
                ul.navbar-nav.align-items-center.ml-md-auto
                    
                ul.navbar-nav.align-items-center.ml-auto.ml-md-0
                    li.nav-item.dropdown
                        a.nav-link.pr-0(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            .media.align-items-center
                                span.avatar.avatar-sm.rounded-circle
                                    if account.avatar == ''
                                        img(alt='Avatar Image' src='/img/avatardefault.png')
                                    else
                                        img(alt='Avatar Image' src='/uploads/'+ account.avatar)
                                .media-body.ml-2.d-none.d-lg-block
                                    span.mb-0.text-sm.font-weight-bold #{account.ho_ten}
                        .dropdown-menu.dropdown-menu-right
                            .dropdown-header.noti-title
                                h6.text-overflow.m-0 Xin chào!
                            a.dropdown-item(href='/account')
                                i.ni.ni-single-02
                                span Thông tin cá nhân
                            a.dropdown-item(href='/')
                                i.ni.ni-settings-gear-65
                                span Đi đến Trang chủ
                            a.dropdown-item(href='#')
                                i.ni.ni-support-16
                                span Hỗ trợ
                            .dropdown-divider
                            a.dropdown-item(href='/logout')
                                i.ni.ni-user-run
                                span Đăng xuất
    // Header End

    block content
              
