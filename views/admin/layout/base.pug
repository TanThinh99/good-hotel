    block title 
    block header

// Sidenav
nav#sidenav-main.sidenav.navbar.navbar-vertical.fixed-left.navbar-expand-xs.navbar-light.bg-white
    .scrollbar-inner
        // Brand
        .sidenav-header.align-items-center
            img.brand-img(src='/assets_manager/img/brand/good_hotel.png' alt='...')
            
        .navbar-inner
            // Collapse
            #sidenav-collapse-main.collapse.navbar-collapse
                // Nav items
                ul.navbar-nav
                    li.nav-item
                        a.nav-link#statisticNav(href='/admin')
                            i.ni.ni-chart-bar-32.text-primary
                            span.nav-link-text Thống kê
                    li.nav-item
                        a.nav-link#accountNav(href='/admin/account')
                            i.ni.ni-single-02.text-orange
                            span.nav-link-text Tài khoản
                    li.nav-item
                        a.nav-link#convenientNav(href='/admin/convenient')
                            i.ni.ni-satisfied.text-yellow
                            span.nav-link-text Tiện nghi
                    li.nav-item
                        a.nav-link#roleNav(href='/admin/role')
                            i.ni.ni-diamond.text-info
                            span.nav-link-text Vai trò
                // Divider
                hr.my-3

                // Navigation
                ul.navbar-nav.mb-md-3
                    li.nav-item
                        a.nav-link(href='/logout')
                            i.ni.ni-user-run
                            span.nav-link-text Đăng xuất

// Main content
#panel.main-content
    // Topnav
    nav.navbar.navbar-top.navbar-expand.navbar-dark.bg-primary.border-bottom
        .container-fluid
            #navbarSupportedContent.collapse.navbar-collapse
                // Navbar links
                ul.navbar-nav.align-items-center.ml-md-auto
                
                ul.navbar-nav.align-items-center.ml-auto.ml-md-0
                    li.nav-item.dropdown
                        a.nav-link.pr-0(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            .media.align-items-center
                                span.avatar.avatar-sm.rounded-circle
                                    if userAccount.avatar == ''
                                        img(alt='Avatar Image' src='/img/avatardefault.png')
                                    else
                                        img(alt='Avatar Image' src='/uploads/'+ userAccount.avatar)
                                .media-body.ml-2.d-none.d-lg-block
                                    span.mb-0.text-sm.font-weight-bold #{userAccount.ho_ten}
                        .dropdown-menu.dropdown-menu-right
                            .dropdown-header.noti-title
                                h6.text-overflow.m-0 Xin chào!
                            a.dropdown-item(href='/account')
                                i.ni.ni-single-02
                                span Thông tin cá nhân
                            a.dropdown-item(href='/')
                                i.ni.ni-settings-gear-65
                                span Đi đến Trang chủ
                            a.dropdown-item(href='#')
                                i.ni.ni-support-16
                                span Hỗ trợ
                            .dropdown-divider
                            a.dropdown-item(href='/logout')
                                i.ni.ni-user-run
                                span Đăng xuất
    // Header End

    block content
        
