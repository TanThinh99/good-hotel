    // Page content
    .container-fluid.mt--6
        .row.justify-content-center
            .col-12
                .card
                    .card-header.bg-transparent
                        h3.mb-0 C&#x1EAD;p nh&#x1EAD;t vai tr&ograve;
                    .card-body
                        .row.icon-examples.customer-reply
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label(for='exampleInputEmail1') T&ecirc;n vai tr&ograve;
                                    input#exampleInputEmail1.form-control(type='text' aria-describedby='emailHelp')
                            .col-md-11.col-md-6.mx-auto
                                .custom-control.custom-switch.form-group.ml-4
                                    input#customSwitch1.custom-control-input(type='checkbox')
                                    label.custom-control-label(for='customSwitch1') V&ocirc; hi&#x1EC7;u h&oacute;a vai tr&ograve;
                            .col-md-11.col-md-6.mx-auto
                                button.btn.btn-success
                                    i.fa.fa-pencil-square-o(aria-hidden='true')
                                    |                       C&#x1EAD;p nh&#x1EAD;t
        
        // Footer
        include layout/footer.pug

