extends layout/base.pug

block title
    title Cập nhật vai trò

block header

block content
    // Header
    .header.bg-primary.pb-6
        .container-fluid
            .header-body
                .row.align-items-center.py-4
                    .col-lg-6.col-7
                        h6.h2.text-white.d-inline-block.mb-0 Vai tr&ograve;
                        nav.d-none.d-md-inline-block.ml-md-4(aria-label='breadcrumb')
                            ol.breadcrumb.breadcrumb-links.breadcrumb-dark
                                li.breadcrumb-item
                                    a(href='#')
                                        i.fas.fa-home
                                li.breadcrumb-item(aria-current='page') Vai tr&ograve;
                                li.breadcrumb-item(aria-current='page') Admin
                                li.breadcrumb-item.active(aria-current='page') C&#x1EAD;p nh&#x1EAD;t
                    
    // Page content
    .container-fluid.mt--6
        .row.justify-content-center
            .col-12
                .card
                    .card-header.bg-transparent
                        h3.mb-0 Cập nhật vai trò
                        input(type="hidden", id="roleID", value=role._id)
                        input(type="hidden", id="token", value=token)
                    .card-body
                        .row.icon-examples.customer-reply
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label(for='roleName') Tên vai trò
                                    input#roleName.form-control(type='text' value=role.ten aria-describedby='emailHelp')
                                    span(style='color:red; display:none;')#nameRoleErr
                                        b.mr-1(style='font-size:20px;') !
                                        | Tên vai trò không được rỗng
                            .col-md-11.col-md-6.mx-auto
                                .custom-control.custom-switch.form-group.ml-4
                                    if role.disabled
                                        input#roleStatus.custom-control-input(type='checkbox' checked)
                                    else 
                                        input#roleStatus.custom-control-input(type='checkbox')
                                    label.custom-control-label(for='roleStatus') Vô hiệu hóa vai trò
                            .col-md-11.col-md-6.mx-auto
                                button.btn.btn-success(onclick='UpdateRole()')
                                    i.fa.fa-pencil-square-o.mr-1(aria-hidden='true')
                                    | Cập nhật
        
        // Footer
        include layout/footer.pug

block script 
    script(src="/assets_admin/js/role.js")
    script.
        document.getElementById('roleNav').classList.add('active');