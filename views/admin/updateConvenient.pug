extends layout/base.pug

block title
    title Cap nhat tien nghi

block header
    link(rel='stylesheet' href='/assets_admin/css/themTienNghi.css')

block content
    // Header
    .header.bg-primary.pb-6
        .container-fluid
            .header-body
                .row.align-items-center.py-4
                    .col-lg-6.col-7
                        h6.h2.text-white.d-inline-block.mb-0 Tiện nghi
                        nav.d-none.d-md-inline-block.ml-md-4(aria-label='breadcrumb')
                            ol.breadcrumb.breadcrumb-links.breadcrumb-dark
                                li.breadcrumb-item
                                    a(href='#')
                                        i.fas.fa-home
                                li.breadcrumb-item(aria-current='page') Tiện nghi
                                li.breadcrumb-item.active(aria-current='page') Cập nhật
                    
    // Page content
    .container-fluid.mt--6
        .row.justify-content-center
            .col-12
                .card
                    .card-header.bg-transparent
                        h3.mb-0 Cập nhật tiện nghi
                    .card-body
                        input(type="hidden", id="convenID" value=conven._id)
                        input(type="hidden", id="token" value=token)
                        .row.icon-examples.customer-reply
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label(for='convenName') Tên tiện nghi
                                    input#convenName.form-control(type='text' aria-describedby='emailHelp' value=conven.ten)
                                    span.infoError#nameInfoErr
                                        b.mr-1 !
                                        | Tên tiện nghi không được rỗng
                            .col-md-11.col-md-6.mx-auto
                                .form-group
                                    label Chọn Icon
                                    .icons.row
                                        input(type="hidden", id="iconSelected" value=conven.hinh_anh)
                                        each icon in fa47
                                            .icon-item.col-1(class=icon==conven.hinh_anh?'active':'' id='icon'+icon onclick='ChooseIcon("'+ icon +'")')
                                                i.fa(class=icon)
                                     
                            .col-md-11.col-md-6.mx-auto
                                button.btn.btn-success(onclick='UpdateConvenient()')
                                    i.fa.fa-pencil-square-o(aria-hidden='true' class='mr-1')
                                    | Cập nhật
        
        // Footer
        include layout/footer.pug
        
block script 
    script(src="/assets_admin/js/convenient.js") 
    script.
        document.getElementById('convenientNav').classList.add('active');